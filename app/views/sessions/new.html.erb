<% if logged_in? %>
<div class="container-fluid">
  <div class="card" style="width: 36rem;">
    <div class="card-body">
      <h5 class="card-title">Content de vous revoir <strong><%= current_user.first_name %></strong> !</h5>
      <h6 class="card-subtitle mb-2 text-muted">Potin du jour :</h6>
      <p class="card-text">- <%= @gossip_sample.content %></p>
    </div>
  </div>
</div>
<% else %>

  <h2 class="text-center">Login</h2>

  <div class="container col-md-3">
      <div class="form-group text-center">

        <%= form_tag sessions_path, method: "post" do %>

         <div class="form-group">
          <%= label_tag 'Email' %>
          <%= text_field_tag 'email',nil, class: 'form-control' %>
          <br /> <br />
        </div>

         <div class="form-group">
          <%= label_tag 'Mot de passe' %>
          <%= password_field_tag 'password',nil, class: 'form-control' %>
          <br /> <br />
        </div>

          <%= submit_tag "Se connecter", class: "btn btn-primary" %>

        <% end %>
      </div>
  </div>
<% end %>