<h1 class="text-center mt-4">Nouveau Gossip</h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<div class="container col-md-3">
  <%= form_tag gossips_path, method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', nil, class: 'form-control' %>
      <br /> <br />
    </div>
    <div class="form-group">
      <%= label_tag 'Gossip' %>
      <%= text_area_tag 'content', nil, class: 'form-control' %>
      <br /> <br />
    </div>
      <%= submit_tag "Create Post", class: "btn btn-primary" %>

  <% end %>
</div>