<h1 class="text-center">Gossip NÂ°<%= @gossip.id %></h1>

  <div class="container">
    <div class="card-deck">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= @gossip.title %></h5>
          <p class="card-text">
            <%= @gossip.content %></br>
            <small class="text-muted"><%= @gossip.user.first_name %> <%= @gossip.user.last_name %> (<%= link_to "Ville", city_path(@gossip.user.city.id) %> : <%= @gossip.user.city.name %>)</small></br>
            <% if @gossip.user == current_user %>
              <%= link_to "Modifier", edit_gossip_path(@gossip.id) %> -
              <%= link_to "Supprimer", gossip_path(@gossip.id), :confirm => "Are you sure?", :method => :delete %></br>
            <% end %>
            <% if logged_in? %>
              <%= link_to "Like", gossip_likes_path(@gossip.id),  method: "post" %>
              <%= link_to "Unlike", gossip_like_path(@gossip.id), :method => :delete %>
            <% end %>
            <small class="text-muted"><%= @gossip.likes.count %> like(s)</small>
          </p>
        </div>
      </div>
    </div>
  </div>